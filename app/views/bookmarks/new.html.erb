<%# locals: () %>
<main class="py-12 w-screen lg:flex lg:p-12 lg:min-h-screen">
  <div class="self-center py-12 px-8 mx-auto w-full max-w-lg">
    <%= form_for @bookmark, url: bookmarks_path, html: { class: "highlight-errors", data: { turbo: false } } do |form| %>
      <div>
        <%= form.label :title, class: "block mb-1 text-sm font-medium text-gray-800" %>
        <%= form.text_field :title, autocomplete: false, autofocus: true, class: "w-full text-gray-800 border-gray-400 rounded focus:ring-2 focus:ring-blue-200 focus:border-blue-300", maxlength: Bookmark::MAXIMUM_TITLE_LENGTH, required: true %>
        <% if @bookmark.errors[:title].present? %>
          <p class="mt-2 text-xs text-red-700"><%= Bookmark.human_attribute_name(:title).humanize %> <%= @bookmark.errors[:title].first %>.</p>
        <% end %>
      </div>

      <div class="mt-6">
        <%= form.label :url, class: "block mb-1 text-sm font-medium text-gray-800" %>
        <%= form.text_field :url, class: "w-full text-gray-800 border-gray-400 rounded focus:ring-2 focus:ring-blue-200 focus:border-blue-300", required: true %>
        <% if @bookmark.errors[:url].present? %>
          <p class="mt-2 text-xs text-red-700"><%= Bookmark.human_attribute_name(:url).humanize %> <%= @bookmark.errors[:url].first %>.</p>
        <% end %>
      </div>

      <button class="block p-4 mx-auto mt-6 w-4/5 text-lg font-semibold text-center text-white bg-blue-600 rounded-lg hover:bg-blue-500 focus:outline-none focus:drop-shadow-blue-200" type="submit">
        <%= t(".submit") %>
      </button>
    <% end %>
  </div>
</main>
